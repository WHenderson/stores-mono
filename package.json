{
  "name": "stores-mono",
  "version": "1.0.0",
  "description": "Mono repo for stores libraries",
  "devDependencies": {
    "@knodes/typedoc-plugin-code-blocks": "^0.22.3",
    "@knodes/typedoc-plugin-monorepo-readmes": "^0.22.3",
    "@knodes/typedoc-plugin-pages": "^0.22.3",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/node": "^17.0.13",
    "c8": "^7.11.0",
    "chalk": "^5.0.0",
    "foreach-folder": "^1.1.0",
    "lodash": "^4.17.21",
    "lunr": "^2.3.9",
    "rimraf": "^3.0.2",
    "rollup": "^2.66.1",
    "rollup-plugin-auto-external": "^2.0.0",
    "rollup-plugin-dts": "^4.1.0",
    "tslib": "^2.3.1",
    "typedoc": "^0.22.13",
    "typedoc-plugin-mermaid": "github:WHenderson/typedoc-plugin-mermaid#v1.7.0",
    "typedoc-plugin-resolve-crossmodule-references": "github:WHenderson/typedoc-plugin-resolve-crossmodule-references#v0.1.2",
    "typescript": "^4.6.2",
    "vite": "^2.7.13",
    "vitest": "^0.6.3"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "pnpm run clean && pnpm -r --filter ./packages run build",
    "build:docs": "pnpm exec typedoc --options typedoc.js",
    "clean": "pnpm -r --filter ./packages run clean",
    "clean:modules": "rimraf \"./packages/*/node_modules\" && rimraf node_modules",
    "test": "vitest run",
    "debug": "vitest run --no-threads --no-isolate",
    "coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "test:tsc": "tsc --noEmit",
    "test:tsc:watch": "tsc --noEmit --watch",
    "coverage:watch": "vitest --coverage",
    "publish:packages": "pnpm -r --filter ./packages publish --no-git-checks"
  },
  "private": true
}
